<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Acumen360" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/acumen360_blue_dark</item>
        <item name="colorPrimaryVariant">@color/acumen360_blue_dark</item>
        <item name="colorOnPrimary">@color/acumen360_blue</item>
        <item name="popupMenuStyle">@style/popupMenus</item>
    </style>

    <style name="Theme.Acumen360" parent="Base.Theme.Acumen360" />

    <style name="Acumen360.Spinner" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        ....
        <item name="android:popupMenuStyle">@style/Spinner.Menu</item>
        ....
    </style>

    <style name="Spinner.Menu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_board_popup</item>
    </style>

    <style name="popupMenus" parent="@android:style/Widget.PopupMenu">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:itemBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@drawable/rounded_board_popup</item>
        <item name="android:colorBackground">@color/pop_gray</item>
        <item name="android:divider">@android:color/black</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listDivider">@color/black</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="EditInputLayout" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="colorError">@color/acumen360_blue_dark</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="switchCompat">
        <item name="colorControlActivated">@color/acumen360_blue</item>
    </style>


    <style name="Activity.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>



</resources>